# .env.example (subir al repo)
SECRET_KEY=CHANGE_ME
DEBUG=False
ALLOWED_HOSTS=127.0.0.1,localhost,EC2_PUBLIC_IP,yourdomain.com

# API PHARMACONTROL (NestJS)
NEST_API_URL=https://api.example.com/api
NEST_API_CLIENT_ID=CHANGE_ME
NEST_API_CLIENT_SECRET=CHANGE_ME

# AUTH / SESSION
AUTH_JWT_COOKIE_NAME=access_token
AUTH_JWT_HEADER=Authorization
AUTH_JWT_PREFIX=Bearer

# IA / MODELOS
IA_USE_REMOTE=false
IA_MODEL_LOCAL_PATH=ia_models/modelo.pkl
IA_MODEL_REMOTE_URL=https://storage.example.com/mi-modelo/modelo.pkl

# RUTAS LOCALES
STATIC_ROOT=/home/ubuntu/proyectoDjango/static
MEDIA_ROOT=/home/ubuntu/proyectoDjango/media

# EMAIL (opcional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=tu_email@example.com
# EMAIL_HOST_PASSWORD -> keep secret, not in example

# LOGGING
LOG_LEVEL=INFO
